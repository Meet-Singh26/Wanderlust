<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <br>
                <h3>Create a new Listing</h3>
                <br>
                <form action="/listings" method="post" novalidate class="needs-validation"
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input id="title" type="text" name="listing[title]" placeholder="Add a catchy Title"
                            class="form-control" required>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Enter a catchy title!</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea id="description" name="listing[description]" class="form-control" required></textarea>
                        <div class="invalid-feedback">Provide short description...</div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Listing Image</label>
                        <input id="image" type="file" name="listing[image]" accept="image/*" class="form-control"
                            required>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-5">
                            <label for="price" class="form-label">Price</label>
                            <input id="price" type="number" name="listing[price]" placeholder="1200"
                                class="form-control" required>
                            <div class="invalid-feedback">Price should be valid!</div>
                        </div>
                        <div class="mb-3 col-md-7">
                            <label for="category" class="form-label">Category</label>
                            <select class="form-select form-select-md" id="category" name="listing[category]">
                                <option value="" selected>Select Category</option>
                                <option value="Beachfront">Beachfront</option>
                                <option value="City Stays">City Stays</option>
                                <option value="Mountain Getaways">Mountain Getaways</option>
                                <option value="Historic Homes">Historic Homes</option>
                                <option value="Unique Stays">Unique Stays</option>
                                <option value="Safari & Wild">Safari & Wild</option>
                                <option value="Private Islands">Private Islands</option>
                                <option value="Countryside Retreats">Countryside Retreats</option>
                                <option value="Pool Villas">Pool Villas</option>
                                <option value="Lakefront">Lakefront</option>
                                <option value="Ski-in/out">Ski-in/out</option>
                                <option value="Desert Escapes">Desert Escapes</option>
                            </select>
                            <div class="invalid-feedback">Category is required!</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-6">
                            <label for="location" class="form-label">Location</label>
                            <input id="location" type="text" name="listing[location]" placeholder="Jaipur,Rajasthan"
                            class="form-control" required>
                            <div class="invalid-feedback">Location is required!</div>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="country" class="form-label">Country</label>
                            <input id="country" type="text" name="listing[country]" placeholder="India"
                                class="form-control" required>
                            <div class="invalid-feedback">Country is required!</div>
                        </div>
                    </div><br>
                    <button class="add-btn btn btn-dark">Add</button>
                </form><br><br>
            </div>
        </div>
    </body>